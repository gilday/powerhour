<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal" android:padding="3dip"
  android:layout_width="fill_parent" android:layout_height="wrap_content">
	<ImageView android:id="@+id/notificationIcon" 
	android:layout_height="fill_parent" android:layout_width="wrap_content" 
	android:paddingLeft="3dip" android:paddingRight="3dip"  
	android:src="@drawable/beerstatusbar" 
	android:layout_centerVertical="true"/>
 	<TextView android:id="@+id/notificationSongTitle"
 		android:layout_width="fill_parent" android:layout_height="wrap_content" 
 		android:layout_toRightOf="@id/notificationIcon" 
 		android:textColor="#FF000000" android:textSize="16dip" />
 	<TextView android:id="@+id/notificationArtist"
 		android:layout_width="fill_parent" android:layout_height="wrap_content"
 		android:layout_toRightOf="@id/notificationIcon" android:layout_below="@id/notificationSongTitle" 
 		android:textColor="#FF000000" android:textSize="14dip" />
	<TextView android:id="@+id/notificationDrink"
  		android:layout_width="fill_parent" android:layout_height="wrap_content"
  		android:layout_toRightOf="@id/notificationIcon" android:layout_below="@id/notificationArtist" 
  		android:textColor="#FF000000" android:textSize="14dip" />
</RelativeLayout>
