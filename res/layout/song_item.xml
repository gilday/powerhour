<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:id="@+id/songitem_name" 
    android:layout_height="wrap_content" android:layout_width="wrap_content"
    android:layout_margin="3dip" 
    android:textSize="20dip" android:textColor="#FFFFFF" 
    android:text="Joelie" android:ellipsize="end"/>
    <TextView android:layout_alignParentLeft="true" android:layout_below="@+id/songitem_name" android:id="@+id/songitem_artist"
    android:layout_height="wrap_content" android:layout_width="wrap_content"
    android:layout_marginLeft="3dip"
    android:textSize="12dip" android:textColor="#CCCCCC" 
    android:text="Steamy Ray Vaughn" android:ellipsize="end"/>
    <ToggleButton android:id="@+id/omit_toggle" 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:layout_alignParentRight="true"
    	android:layout_centerVertical="true"
    	android:layout_margin="3dip" />
</RelativeLayout>