<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
  android:layout_height="wrap_content" android:layout_width="fill_parent">
  	<TextView android:id="@+id/playlist_name" 
  		android:layout_height="wrap_content" android:layout_width="wrap_content"
  		android:layout_margin="3dip" 
  		android:textSize="20sp" android:textColor="#FFFFFF" />
  	<LinearLayout
  		android:layout_height="wrap_content" android:layout_width="fill_parent"
  		android:layout_marginLeft="4dip" android:layout_marginRight="2dip" android:layout_marginBottom="2dip">
	  	<TextView android:id="@+id/playlist_size"
	  		android:layout_height="wrap_content" android:layout_width="wrap_content"
	  		 android:textSize="12sp" android:textColor="#CCCCCC" />
  	</LinearLayout>
</LinearLayout>
