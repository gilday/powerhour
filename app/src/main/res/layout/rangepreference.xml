<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="15dip" android:paddingTop="5dip" android:paddingRight="10dip" android:paddingBottom="5dip">

	<LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content" 
	  android:gravity="left"
	  android:orientation="horizontal">
	  
	  <!--  Setting android:textAppearance="@android:style/TextAppearance" 
	  		makes the TextView themeable. Gets along with Android default look and feel -->
	  <TextView 
	  	android:id="@+id/RangePreferenceTitle"
	  	android:textAppearance="@android:style/TextAppearance"
	  	android:textSize="22sp"
	  	android:gravity="left"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content" />
	  	
	  <TextView android:id="@+id/RangePreferenceMonitor"
	  	android:gravity="right"
	  	android:textSize="14sp"
	  	android:paddingTop="4dip"
	  	android:layout_width="fill_parent" android:layout_height="wrap_content" />
	</LinearLayout>
	
	<TextView 
	  	android:id="@+id/RangePreferenceSummary"
	  	android:gravity="left"
	  	android:textSize="14sp"
	  	android:paddingLeft="2dip" android:paddingTop="2dip"
	  	android:layout_width="fill_parent" android:layout_height="wrap_content" />

	<SeekBar android:id="@+id/RangePreferenceSeekBar"
	  	android:layout_height="wrap_content" 
	  	android:layout_width="fill_parent"/>
</LinearLayout>
