<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:paddingLeft="15dip" android:paddingTop="5dip" android:paddingRight="10dip" android:paddingBottom="5dip">
  
  	<TextView 
  		android:id="@+id/AudioPrefTitle"
  		android:textAppearance="@android:style/TextAppearance"
  		android:textSize="22sp"
  		android:gravity="left"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"/>
  
	<TextView 
		android:id="@+id/CustomAudioFileName"
		android:gravity="left"
		android:textSize="14sp"
		android:paddingLeft="2dip" android:paddingTop="2dip"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" />
</LinearLayout>
